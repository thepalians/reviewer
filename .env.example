# ReviewFlow Environment Configuration
# Copy this file to .env and update with your actual values
# NEVER commit .env file to version control

# Database Configuration
DB_HOST=localhost
DB_USER=your_database_user
DB_PASS=your_secure_password_here
DB_NAME=reviewflow
DB_CHARSET=utf8mb4

# Application Settings
APP_NAME=ReviewFlow
APP_URL=https://yourdomain.com/reviewer
ADMIN_URL=https://yourdomain.com/reviewer/admin
SELLER_URL=https://yourdomain.com/reviewer/seller
APP_VERSION=3.0.0

# Security Settings
SESSION_TIMEOUT=3600
DEBUG_MODE=false

# JWT Secret - IMPORTANT: Generate a strong random secret key
# Use a long random string (minimum 64 characters recommended)
# Example: openssl rand -hex 32
# NEVER commit your actual secret to version control
JWT_SECRET=

# Email Settings (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourdomain.com
SMTP_FROM_NAME=ReviewFlow

# Payment Gateway - Razorpay
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# Payment Gateway - PayU
PAYU_MERCHANT_KEY=
PAYU_MERCHANT_SALT=

# Payment Gateway - Cashfree
CASHFREE_APP_ID=
CASHFREE_SECRET_KEY=

# WhatsApp Settings
WHATSAPP_API_URL=https://api.whatsapp.com/send
WHATSAPP_SUPPORT=919876543210

# Firebase (Optional)
FIREBASE_API_KEY=
FIREBASE_AUTH_DOMAIN=
FIREBASE_PROJECT_ID=

# Redis Cache (Optional)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# Admin Credentials (for initial setup only)
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=change_this_password_after_first_login
